<%-- :mode=jsp: --%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>

<c:set var="rootId" value="scroller"/>
<%@ include file="../../../demos/standalone.jsf" %>
</head>

<body>

<style>
#actionButtons {
	text-align:center;
	margin-top:30px;
}
</style>

<!-- required CSS files -->
<c:if test="${empty plain}">
<link rel="stylesheet" type="text/css" href="${cdn}${jqt}/css/scrollable-horizontal.css" />
<link rel="stylesheet" type="text/css" href="${cdn}${jqt}/css/scrollable-buttons.css" />	
</c:if>

<%@ include file="../scrollable.jsf" %>

<br clear="all" />

<c:set var="html">
<div id="actionButtons">
	<button type="button" onClick="api.play()">Play</button>
	<button type="button" onClick="api.pause()">Pause</button>
	<button type="button" onClick="api.stop()">Stop</button>
</div>
</c:set>

${html}

<br clear="all" />

<!-- javascript coding -->
<script>
// What is $(document).ready ? See: http://flowplayer.org${jqt}/documentation/basics.html#document_ready
$(document).ready(function() {
<c:set var="js">		
// initialize scrollable together with the autoscroll plugin
var root = $("#${rootId}").scrollable({circular: true}).autoscroll({ autoplay: false });

// provide scrollable API for the action buttons
window.api = root.data("scrollable");
</c:set>
${js}

	
});
</script>



